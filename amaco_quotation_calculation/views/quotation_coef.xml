<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_quotation_coeff_tree" model="ir.ui.view">
            <field name="name">quotation.coeff.tree</field>
            <field name="model">quotation.coefficient</field>
            <field name="arch" type="xml">
                <tree string="Quotation Coefficients" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="coeff" sum="Global Coefficient"/>
                </tree>
            </field>
        </record>

        <record id="quotation_coeff_act" model="ir.actions.act_window">
            <field name="name">Quotation Coefficients</field>
            <field name="res_model">quotation.coefficient</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_quotation_coeff_tree"/>
            <!--<field name="context">{'in_sales_app': True}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new quotation coefficient
                </p><p>
                    Use Quotation Coefficient to improve the calculation of your order line prices.
                    The calculation of the order lines prices is done with all the coefficients created.
                </p>
            </field>
        </record>

        <menuitem id="quotation_coeff_tree_menu" 
                  name="Quotation Coefficients" 
                  parent="sale.menu_sale_config" 
                  sequence="20"
                  action="quotation_coeff_act"/>
    </data>
</odoo>


