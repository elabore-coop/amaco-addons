<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_amaco" model="ir.ui.view">
            <field name="name">sale.order.form.amaco</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="activate_calculation_fields"/>
                    <field name="price_hr" attrs="{'readonly': [('activate_calculation_fields', '=', False)]}"/>
                    <field name="price_fourniture" attrs="{'readonly': [('activate_calculation_fields', '=', False)]}"/>
                    <field name="price_misc" attrs="{'readonly': [('activate_calculation_fields', '=', False)]}"/>
                    <field name="price_service" attrs="{'readonly': [('activate_calculation_fields', '=', False)]}"/>
                    <field name="apply_coeff" attrs="{'readonly': [('activate_calculation_fields', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
