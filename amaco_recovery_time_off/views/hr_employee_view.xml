<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_tree_recovery" model="ir.ui.view">
        <field name="name">view_employee_tree_recovery</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button type="object" name="action_recovery_requests_wizard" string="Recovery Time Off Allocations" class="btn-primary" />
                </header>
            </xpath>
        </field>
    </record>
</odoo>