<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- add account income and account expense columns to product view tree in Account App -->
    <record id="product_template_account_view_tree_income_expense_inherit" model="ir.ui.view">
        <field name="name">product.template.account.view.tree.income.expense.inherit</field>
        <field name="inherit_id" ref="account.product_template_view_tree" />
        <field name="model">product.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="activity_exception_decoration" position="after">
                <field name="property_account_income_id" optional="show"/>
                <field name="property_account_expense_id" optional="show"/>
            </field>
        </field>
    </record>
    <!-- add account income and account expense columns to product view tree in Sales App -->
    <record id="product_template_product_view_tree_income_expense_inherit" model="ir.ui.view">
        <field name="name">product.template.product.view.tree.income.expense.inherit</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="model">product.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="activity_exception_decoration" position="after">
                <field name="property_account_income_id" optional="show"/>
                <field name="property_account_expense_id" optional="show"/>
            </field>
        </field>
    </record> 
</odoo>