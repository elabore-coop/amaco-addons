<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calendar_event_tree_amaco_inherit_categ" model="ir.ui.view">
        <field name="name">view.calendar.event.tree.amaco.inherit.categ</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='duration']" position="after">                
                <field name="categ_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <record id="view_calendar_event_calendar_amaco_inherit_categ" model="ir.ui.view">
        <field name="name">view.calendar.event.calendar.amaco.inherit.categ</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="before">                
                <field name="categ_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>